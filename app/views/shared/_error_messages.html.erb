<% if @user.errors.any? %>
  <div id="error-explanation" class='panel panel-danger'>
    <div class="panel-heading">
      <div class='panel-title'>The form contains <%= pluralize(@user.errors.count, 'error') %>.</div>
    </div>
    <div class='panel-body'>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
